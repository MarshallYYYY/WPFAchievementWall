<UserControl
    x:Class="Client.Views.AchievementDisplayView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Views"
    xmlns:viewmodels="clr-namespace:Client.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AchievementDisplayViewModel}"
    xmlns:advs="clr-namespace:Client.Views.AchievementDisplayViews"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <!--切换面板-->
    <md:Transitioner
        SelectedIndex="{Binding Path=IsShowAddEdit}">

        <!--第一页：成就显示-->
        <md:TransitionerSlide
            OpeningEffect="{md:TransitionEffect Kind=SlideInFromBottom}">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--上方的按钮和筛选菜单-->
                <advs:AchievementDisplayTopView
                    Grid.Row="0" />

                <!--横线-->
                <Border
                    Grid.Row="1"
                    BorderBrush="#FF3F51B5"
                    BorderThickness="0,1,0,0"
                    HorizontalAlignment="Stretch"
                    Margin="0,5" />

                <!--下方的左右两栏-->
                <Grid
                    Grid.Row="2">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!-- 左侧的成就记录时间线 -->
                    <ScrollViewer
                        Grid.Column="0"
                        ScrollViewer.VerticalScrollBarVisibility="Hidden">

                        <ItemsControl
                            Margin="0,0,30,0"
                            ItemsSource="{Binding AllAchievement}">
                            <ItemsControl.ItemTemplate>

                                <DataTemplate>
                                    <advs:YearAchievementView />
                                </DataTemplate>

                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!--右侧的具体内容展示-->
                    <advs:AchievementDetailsView
                        Visibility="{Binding DetailsVisibility}"
                        Grid.Column="1" />
                </Grid>

            </Grid>

        </md:TransitionerSlide>

        <!--第二页：新增/编辑 成就-->
        <md:TransitionerSlide
            OpeningEffect="{md:TransitionEffect Kind=SlideInFromTop}">
            <advs:AddEditAchievementView />
        </md:TransitionerSlide>

    </md:Transitioner>

</UserControl>