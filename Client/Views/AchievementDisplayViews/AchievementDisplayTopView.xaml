<UserControl
    x:Class="Client.Views.AchievementDisplayViews.AchievementDisplayTopView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Views.AchievementDisplayViews"
    xmlns:viewmodels="clr-namespace:Client.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AchievementDisplayViewModel}"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <UserControl.Resources>

        <Style
            x:Key="TextBlockTemplate"
            TargetType="TextBlock">
            <Setter
                Property="FontSize"
                Value="22" />
            <Setter
                Property="VerticalAlignment"
                Value="Center" />
        </Style>

    </UserControl.Resources>

    <StackPanel
        Orientation="Horizontal"
        Margin="0,10">

        <Button
            Grid.Row="0"
            Content="New +"
            Background="Green"
            Opacity="0.8"
            FontSize="22"
            Margin="5,5,20,5" />

        <TextBlock
            Text="年份："
            Style="{StaticResource TextBlockTemplate}" />
        <TextBox
            Width="60"
            FontSize="22"
            VerticalAlignment="Center"
            MaxLength="4" />

        <TextBlock
            Text="标题："
            Style="{StaticResource TextBlockTemplate}" />
        <TextBox
            Width="200"
            FontSize="22"
            VerticalAlignment="Center" />

        <TextBlock
            Text="内容："
            Style="{StaticResource TextBlockTemplate}" />
        <TextBox
            Width="200"
            FontSize="22"
            VerticalAlignment="Center" />

        <TextBlock
            Text="星级："
            Style="{StaticResource TextBlockTemplate}" />
        <ComboBox
            FontSize="22"
            Width="30"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center">
            <ComboBoxItem
                Content="0"
                IsSelected="True" />
            <ComboBoxItem
                Content="1" />
            <ComboBoxItem
                Content="2" />
            <ComboBoxItem
                Content="3" />
            <ComboBoxItem
                Content="4" />
            <ComboBoxItem
                Content="5" />
        </ComboBox>

        <TextBlock
            Text="类别："
            Style="{StaticResource TextBlockTemplate}" />
        <ComboBox
            FontSize="22">
            <ComboBoxItem
                Content="默认"
                IsSelected="True" />
            <ComboBoxItem
                Content="生活经历" />
            <ComboBoxItem
                Content="学习成长" />
            <ComboBoxItem
                Content="健康运动" />
            <ComboBoxItem
                Content="职业发展" />
        </ComboBox>

        <Button
            Grid.Row="0"
            Content="筛选"
            Background="Green"
            Opacity="0.8"
            FontSize="22"
            Margin="5" />

        <Button
            Grid.Row="0"
            Content="清空"
            Background="Green"
            Opacity="0.8"
            FontSize="22"
            Margin="5" />

    </StackPanel>
</UserControl>
