<UserControl
    x:Class="Client.Views.AchievementDisplayViews.AchievementDisplayTopView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Views.AchievementDisplayViews"
    xmlns:viewmodels="clr-namespace:Client.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AchievementDisplayViewModel}"
    xmlns:advs="clr-namespace:Client.Views.AchievementDisplayViews"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <UserControl.Resources>

        <Style
            x:Key="TextBlockTemplate"
            TargetType="TextBlock">
            <Setter
                Property="FontSize"
                Value="22" />
            <Setter
                Property="VerticalAlignment"
                Value="Center" />
        </Style>

    </UserControl.Resources>

    <DockPanel
        LastChildFill="False"
        Margin="0,10">

        <Border
            BorderBrush="Blue"
            BorderThickness="2"
            CornerRadius="5"
            Margin="5,0,0,0">
            <TextBlock
                Text="搜索栏"
                Foreground="#FF3F51B5"
                FontWeight="Bold"
                FontSize="26"
                Margin="10,0"
                Style="{StaticResource TextBlockTemplate}" />
        </Border>

        <TextBlock
            Text="年份："
            Style="{StaticResource TextBlockTemplate}" />
        <ComboBox
            FontSize="22"
            Width="69"
            ItemsSource="{Binding Path=YearComboBoxSource}"
            SelectedItem="{Binding Path=YearComboBoxSelectedItem}" />

        <TextBlock
            Text="标题："
            Style="{StaticResource TextBlockTemplate}" />
        <TextBox
            Width="120"
            FontSize="22"
            Text="{Binding Path=Title}"
            VerticalAlignment="Center" />

        <TextBlock
            Text="内容："
            Style="{StaticResource TextBlockTemplate}" />
        <TextBox
            Width="200"
            FontSize="22"
            Text="{Binding Path=Content}"
            VerticalAlignment="Center" />

        <TextBlock
            Text="星级："
            Style="{StaticResource TextBlockTemplate}" />
        <ComboBox
            FontSize="22"
            Width="30"
            ItemsSource="{Binding Path=LevelComboBoxSource}"
            SelectedItem="{Binding Path=LevelComboBoxSelectedItem}"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center" />

        <TextBlock
            Text="类别："
            Style="{StaticResource TextBlockTemplate}" />
        <ComboBox
            FontSize="22"
            Width="105"
            ItemsSource="{Binding Path=CategoryComboBoxSource}"
            SelectedItem="{Binding Path=CategoryComboBoxSelectedItem}" />

        <Button
            Grid.Row="0"
            Content="筛选"
            Command="{Binding Path=FilterCommand}"
            Background="Green"
            Opacity="0.8"
            FontSize="22"
            Margin="5" />

        <Button
            Grid.Row="0"
            Content="清空"
            Command="{Binding Path=ClearCommand}"
            Background="Green"
            Opacity="0.8"
            FontSize="22"
            Margin="5" />

        <Button
            Grid.Row="0"
            DockPanel.Dock="Right"
            Command="{Binding Path=AddCommand}"
            Content="New +"
            Background="Green"
            Opacity="0.8"
            Margin="0,0,20,0"
            FontSize="22">
            <Button.CommandParameter>
                <advs:AddEditAchievementView />
            </Button.CommandParameter>
        </Button>

    </DockPanel>
</UserControl>
