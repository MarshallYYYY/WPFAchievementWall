<UserControl
    x:Class="Client.Views.AchievementDisplayViews.AchievementDisplayTopView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Views.AchievementDisplayViews"
    xmlns:viewmodels="clr-namespace:Client.ViewModels"
    xmlns:advs="clr-namespace:Client.Views.AchievementDisplayViews"
    d:DataContext="{d:DesignInstance Type=viewmodels:AchievementDisplayViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>

        <Style
            x:Key="TextBlockTemplate"
            TargetType="TextBlock">
            <Setter
                Property="FontSize"
                Value="22" />
            <Setter
                Property="VerticalAlignment"
                Value="Center" />
        </Style>
    </UserControl.Resources>

    <DockPanel
        Margin="0,10"
        LastChildFill="False">

        <Border
            Margin="5,0,0,0"
            BorderBrush="Blue"
            BorderThickness="2"
            CornerRadius="5">
            <TextBlock
                Text="搜索栏"
                Margin="10,0"
                Foreground="#FF3F51B5"
                FontWeight="Bold"
                FontSize="26"
                Style="{StaticResource TextBlockTemplate}" />
        </Border>

        <TextBlock
            Text="年份："
            Style="{StaticResource TextBlockTemplate}" />
        <ComboBox
            Width="69"
            FontSize="22"
            ItemsSource="{Binding Path=SearchBarYearComboBoxSource}"
            SelectedItem="{Binding Path=SearchBarYear}" />

        <TextBlock
            Text="标题："
            Style="{StaticResource TextBlockTemplate}" />
        <TextBox
            Text="{Binding Path=SearchBarTitle}"
            Width="120"
            VerticalAlignment="Center"
            FontSize="22" />

        <TextBlock
            Text="内容："
            Style="{StaticResource TextBlockTemplate}" />
        <TextBox
            Text="{Binding Path=SearchBarContent}"
            Width="200"
            VerticalAlignment="Center"
            FontSize="22" />

        <TextBlock
            Text="星级："
            Style="{StaticResource TextBlockTemplate}" />
        <ComboBox
            Width="30"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center"
            FontSize="22"
            ItemsSource="{Binding Path=LevelComboBoxSource}"
            SelectedItem="{Binding Path=SearchBarLevel}" />

        <TextBlock
            Text="类别："
            Style="{StaticResource TextBlockTemplate}" />
        <ComboBox
            Width="105"
            FontSize="22"
            ItemsSource="{Binding Path=CategoryComboBoxSource}"
            SelectedItem="{Binding Path=SearchBarCategory}" />

        <Button
            Content="筛选"
            Grid.Row="0"
            Command="{Binding Path=FilterCommand}"
            Margin="5"
            Background="Green"
            Opacity="0.8"
            FontSize="22" />

        <Button
            Content="清空"
            Grid.Row="0"
            Command="{Binding Path=ClearCommand}"
            Margin="5"
            Background="Green"
            Opacity="0.8"
            FontSize="22" />

        <Button
            Grid.Row="0"
            Command="{Binding Path=AddCommand}"
            Content="New +"
            Margin="0,0,20,0"
            DockPanel.Dock="Right"
            Background="Green"
            Opacity="0.8"
            FontSize="22">

            <Button.CommandParameter>
                <advs:AddEditAchievementView />
            </Button.CommandParameter>
        </Button>
    </DockPanel>
</UserControl>