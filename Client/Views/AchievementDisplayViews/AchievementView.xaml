<UserControl
    x:Class="Client.Views.AchievementDisplayViews.AchievementView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Views.AchievementDisplayViews"
    xmlns:models="clr-namespace:Client.Models"
    xmlns:converters="clr-namespace:Client.Converters"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewmodels="clr-namespace:Client.ViewModels"
    xmlns:advms="clr-namespace:Client.ViewModels.AchievementDisplayViewModels"
    prism:ViewModelLocator.AutoWireViewModel="True"
    d:DataContext="{d:DesignInstance Type=advms:AchievementViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:EnumToInfoConverter
            x:Key="EnumToInfo" />
        <converters:IntToStarConverter
            x:Key="IntToStar" />
    </UserControl.Resources>

    <Grid>

        <!--  #FF00A4EF  -->
        <!--#FF7FBA00-->
        <Border
            Width="400"
            Margin="0,0,0,5"
            Padding="10"
            BorderThickness="3"
            BorderBrush="#FF3F51B5"
            CornerRadius="5">

            <Grid
                d:DataContext="{d:DesignInstance models:Achievement}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="60" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--  左侧二行二个  -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="auto" />
                        <RowDefinition
                            Height="20" />
                    </Grid.RowDefinitions>

                    <!--  根据分类显示不同的图标和图标颜色  -->
                    <TextBlock
                        Text="{Binding Path=Category, 
                            Converter={StaticResource EnumToInfo},
                            ConverterParameter=Icon}"
                        FontSize="30"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Foreground="{Binding Category, 
                            Converter={StaticResource EnumToInfo}, 
                            ConverterParameter=Color}" />

                    <!--  成就类型  -->
                    <Border
                        Grid.Row="1"
                        Background="#E8F5E8"
                        CornerRadius="4">
                        <TextBlock
                            Text="{Binding Category,
                                Converter={StaticResource EnumToInfo},
                                ConverterParameter=Name}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="#1976D2" />
                    </Border>
                </Grid>

                <!--  右侧三行四个  -->
                <Grid
                    Grid.Column="1"
                    Margin="20,0,0,0">

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Text="{Binding Title}"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Foreground="Black"
                        FontSize="22"
                        FontWeight="SemiBold" />
                    <!--  成就内容  -->
                    <!--  TextWrapping="Wrap"  -->
                    <TextBlock
                        Text="{Binding Content}"
                        Grid.Row="1"
                        Margin="0,8,0,0"
                        FontSize="18"
                        ToolTip="{Binding Content}"
                        Foreground="#666" />
                    <StackPanel
                        Grid.Row="2"
                        Orientation="Horizontal">

                        <!--  达成时间  -->
                        <TextBlock
                            Text="{Binding AchieveDate, StringFormat='yyyy年MM月dd日'}"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="#999" />

                        <!--  重要性等级 星星  -->
                        <TextBlock
                            Text="{Binding Level, 
                                Converter={StaticResource IntToStar}}"
                            FontSize="18"
                            Background="#FFF3E0"
                            Foreground="#FF9800" />
                    </StackPanel>
                </Grid>

                <!--  最右侧的展开按钮  -->
                <Button
                    Grid.Column="1"
                    Width="50"
                    Height="50"
                    Margin="0,0,-35,0"
                    HorizontalAlignment="Right"
                    Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}"
                    Command="{Binding DataContext.OpenDetailsCommand, 
                            RelativeSource={RelativeSource AncestorType=UserControl, 
                            AncestorLevel=3}}"
                    CommandParameter="{Binding}"
                    ToolTip="成就详情">
                    <md:PackIcon
                        Width="27"
                        Height="27"
                        Kind="BookOpenPageVariantOutline" />
                </Button>

            </Grid>
        </Border>
    </Grid>
</UserControl>