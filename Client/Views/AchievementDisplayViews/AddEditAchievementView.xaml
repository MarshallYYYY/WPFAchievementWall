<UserControl
    x:Class="Client.Views.AchievementDisplayViews.AddEditAchievementView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Views.AchievementDisplayViews"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewmodels="clr-namespace:Client.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AchievementDisplayViewModel}"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <UserControl.Resources>

        <Style
            x:Key="TextBlockTemplate"
            TargetType="TextBlock">
            <Setter
                Property="FontSize"
                Value="22" />
            <Setter
                Property="VerticalAlignment"
                Value="Center" />
        </Style>

    </UserControl.Resources>

    <StackPanel
        MinWidth="200"
        MaxWidth="500">

        <TextBlock
            Text="{Binding Path=TitleAddEdit}"
            HorizontalAlignment="Center"
            FontSize="50" />

        <StackPanel
            Orientation="Horizontal">

            <TextBlock
                Text="日期："
                Style="{StaticResource TextBlockTemplate}" />
            <DatePicker
                VerticalContentAlignment="Center"
                Width="150"
                FontSize="18"
                SelectedDate="{Binding Path=AchieveDate}"
                md:TextFieldAssist.HasClearButton="True" />

        </StackPanel>

        <StackPanel
            Orientation="Horizontal">

            <TextBlock
                Text="标题："
                Style="{StaticResource TextBlockTemplate}" />
            <TextBox
                MinWidth="150"
                FontSize="22"
                Text="{Binding Path=Title}"
                VerticalAlignment="Center" />

        </StackPanel>

        <TextBlock
            Text="内容："
            Style="{StaticResource TextBlockTemplate}" />
        <TextBox
            FontSize="22"
            TextWrapping="Wrap"
            Text="{Binding Path=Content}"
            VerticalAlignment="Center" />

        <StackPanel
            Orientation="Horizontal">

            <TextBlock
                Text="星级："
                Style="{StaticResource TextBlockTemplate}" />
            <ComboBox
                FontSize="22"
                Width="30"
                ItemsSource="{Binding Path=LevelComboBoxSource}"
                SelectedItem="{Binding Path=Level}"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center" />

        </StackPanel>

        <StackPanel
            Orientation="Horizontal">

            <TextBlock
                Text="类别："
                Style="{StaticResource TextBlockTemplate}" />

            <ComboBox
                FontSize="22"
                ItemsSource="{Binding Path=CategoryComboBoxSource}"
                SelectedItem="{Binding Path=Category}" />

        </StackPanel>

        <StackPanel
            HorizontalAlignment="Center"
            Orientation="Horizontal">

            <Button
                Content="确定"
                Command="{Binding OKCommand}"
                HorizontalAlignment="Right"
                FontSize="18"
                Style="{StaticResource MaterialDesignFlatButton}">
            </Button>

            <Button
                Command="{x:Static md:DialogHost.CloseDialogCommand}"
                IsCancel="True"
                Content="取消"
                HorizontalAlignment="Right"
                FontSize="18"
                Style="{StaticResource MaterialDesignFlatButton}">
            </Button>

        </StackPanel>

    </StackPanel>

</UserControl>