<UserControl
    x:Class="Client.Views.DialogContent.MessageBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Views.DialogContent"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    xmlns:dialogcontent="clr-namespace:Client.ViewModels.DialogContent"
    d:DataContext="{d:DesignInstance Type=dialogcontent:MessageBoxViewModel}">

    <Grid
        Width="320"
        Background="White"
        Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock
            Text="{Binding Path=Title}"
            FontSize="22"
            FontWeight="Bold"
            Margin="10" />

        <!-- 内容 -->
        <TextBlock
            Text="{Binding Path=Message}"
            Margin="10"
            FontSize="18"
            Grid.Row="1"
            TextWrapping="Wrap" />

        <!-- 按钮 -->
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Margin="10"
            Grid.Row="2">

            <Button
                Content="确认"
                Width="72"
                Margin="20"
                Command="{Binding Path=OkCommand}" />

            <Button
                Content="取消"
                Width="72"
                Margin="20"
                Command="{Binding Path=CancelCommand}" />

        </StackPanel>

    </Grid>

</UserControl>