<UserControl
    x:Class="Client.Views.LoginViews.LoginVerification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Views.LoginViews"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:viewmodels="clr-namespace:Client.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}">

    <StackPanel
        VerticalAlignment="Center">

        <Image
            Width="150"
            Height="150"
            Source="/Images/icon.png">
        </Image>

        <!--md:TextFieldAssist.HasClearButton 容易偏上，设置 VerticalContentAlignment="Center" 即可修正-->
        <TextBox
            Text="{Binding Path=UserName, UpdateSourceTrigger=PropertyChanged}"
            MaxLength="12"
            Margin="50,20"
            VerticalContentAlignment="Center"
            FontSize="22"
            md:HintAssist.Hint="用户名"
            md:TextFieldAssist.HasClearButton="True" />

        <PasswordBox
            md:PasswordBoxAssist.Password="{Binding Path=Password, UpdateSourceTrigger=PropertyChanged}"
            MaxLength="12"
            Margin="50,20"
            VerticalContentAlignment="Center"
            FontSize="22"
            md:HintAssist.Hint="密码"
            md:TextFieldAssist.HasClearButton="True" />

        <Button
            Content="登录"
            Margin="50,20"
            FontSize="30"
            Height="auto"
            Width="auto"
            Command="{Binding Path=LoginCommand}" />

        <!--父元素是StackPanel，会自动拉伸子元素的宽度/高度-->
        <!--设置 HorizontalAlignment="Center"，让 TextBlock 不拉伸-->
        <TextBlock
            Text="注册账号"
            Foreground="Blue"
            Margin="50,20"
            HorizontalAlignment="Center"
            FontSize="16"
            Cursor="Hand">
            
            <i:Interaction.Triggers>
                <i:EventTrigger
                    EventName="MouseLeftButtonDown">
                    <prism:InvokeCommandAction
                        Command="{Binding Path=OpenRegisterCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            
        </TextBlock>

    </StackPanel>

</UserControl>