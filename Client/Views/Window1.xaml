<Window
    x:Class="Client.Views.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Client.Views"
    xmlns:viewmodels="clr-namespace:Client.ViewModels"
    Title="Window1"
    Width="1200"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Width}"
                FontSize="80" />
            <!--  个人成长 - 成长的小树  -->
            <TextBlock Text="🌱"
                Foreground="#FF27AE60"
                FontSize="80"
                ToolTip="个人成长" />
            <TextBlock Text="📚"
                Foreground="#FF2E86AB"
                FontSize="80"
                ToolTip="学习收获" />
            <TextBlock Text="🏃"
                Foreground="#FFE74C3C"
                FontSize="80"
                ToolTip="健康运动" />
            <TextBlock Text="💼"
                Foreground="#FF8E44AD"
                FontSize="80"
                ToolTip="职业发展" />
            <TextBlock Text="⭐"
                Foreground="#FFF39C12"
                FontSize="80"
                ToolTip="默认成就" />
            <TextBlock Text="🎯"
                Foreground="#FFE74C3C"
                FontSize="80"
                ToolTip="目标设定" />
            <TextBlock Text="⭐"
                Foreground="#FFFFD700"
                FontSize="80"
                ToolTip="重要成就" />
            <!--  爱心  -->
            <TextBlock Text="❤️"
                Foreground="#FFE74C3C"
                FontSize="80"
                ToolTip="情感成就" />
            <!--  旅行  -->
            <TextBlock Text="✈️"
                Foreground="#FF2980B9"
                FontSize="80"
                ToolTip="旅行冒险" />
            <StackPanel
                Width="80"
                HorizontalAlignment="Center"
                Orientation="Vertical">
                <TextBlock Text="🌱"
                    HorizontalAlignment="Center"
                    Foreground="#FF27AE60"
                    FontSize="40" />
                <TextBlock Text="个人成长"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    Foreground="#333333"
                    FontSize="12" />
            </StackPanel>
            <TextBlock Text="🌟"
                Foreground="#FFFFA726"
                FontSize="80"
                ToolTip="默认成就" />
            <TextBlock Text="✨"
                Foreground="#FFFFCA28"
                FontSize="80"
                ToolTip="闪耀成就" />
            <!--<TextBlock Text="{Binding Width}" />-->
            <TextBlock Text="🎯"
                Foreground="#FFF03A17"
                FontSize="80" />
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <StackPanel Orientation="Vertical">

                <!--  2024年成就  -->
                <StackPanel Orientation="Horizontal">
                    <!--  时间线  -->
                    <StackPanel
                        Width="80"
                        VerticalAlignment="Top">
                        <TextBlock Text="2024"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="#2196F3" />
                        <Rectangle
                            Height="2"
                            Margin="0,4,0,0"
                            Fill="#E0E0E0" />
                    </StackPanel>

                    <!--  成就项  -->
                    <StackPanel>
                        <!--  成就1  -->
                        <Border
                            Margin="0,0,0,12"
                            Padding="16"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="🎯 完成WPF项目开发"
                                    FontSize="16"
                                    FontWeight="SemiBold" />
                                <TextBlock Text="使用Prism框架成功开发个人成就记录墙应用"
                                    Margin="0,4,0,0"
                                    FontSize="12"
                                    Foreground="#666" />
                                <StackPanel
                                    Margin="0,8,0,0"
                                    Orientation="Horizontal">
                                    <TextBlock Text="2024-01-15"
                                        FontSize="11"
                                        Foreground="#999" />
                                    <TextBlock Text="职业发展"
                                        Padding="4,2"
                                        FontSize="11"
                                        Background="#E3F2FD"
                                        Foreground="#1976D2" />
                                    <TextBlock Text="⭐⭐⭐⭐⭐"
                                        FontSize="11"
                                        Foreground="#FF9800" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!--  成就2  -->
                        <Border
                            Padding="16"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="📚 学习Prism框架"
                                    FontSize="16"
                                    FontWeight="SemiBold" />
                                <TextBlock Text="掌握了Prism的模块化、导航和依赖注入等核心概念"
                                    Margin="0,4,0,0"
                                    FontSize="12"
                                    Foreground="#666" />
                                <StackPanel
                                    Margin="0,8,0,0"
                                    Orientation="Horizontal">
                                    <TextBlock Text="2024-01-10"
                                        FontSize="11"
                                        Foreground="#999" />
                                    <TextBlock Text="学习成长"
                                        Padding="4,2"
                                        FontSize="11"
                                        Background="#E8F5E8"
                                        Foreground="#2E7D32" />
                                    <TextBlock Text="⭐⭐⭐⭐"
                                        FontSize="11"
                                        Foreground="#FF9800" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!--  2023年成就  -->
                <StackPanel Orientation="Horizontal">
                    <!--  时间线  -->
                    <StackPanel
                        Width="80"
                        VerticalAlignment="Top">
                        <TextBlock Text="2023"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="#2196F3" />
                        <Rectangle
                            Height="2"
                            Margin="0,4,0,0"
                            Fill="#E0E0E0" />
                    </StackPanel>

                    <!--  成就项  -->
                    <StackPanel>
                        <!--  成就1  -->
                        <Border
                            Margin="0,0,0,12"
                            Padding="16"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="💪 健身目标达成"
                                    FontSize="16"
                                    FontWeight="SemiBold" />
                                <TextBlock Text="连续30天坚持每日锻炼，体重减轻5公斤"
                                    Margin="0,4,0,0"
                                    FontSize="12"
                                    Foreground="#666" />
                                <StackPanel
                                    Margin="0,8,0,0"
                                    Orientation="Horizontal">
                                    <TextBlock Text="2023-12-20"
                                        FontSize="11"
                                        Foreground="#999" />
                                    <TextBlock Text="健康运动"
                                        Padding="4,2"
                                        FontSize="11"
                                        Background="#FFF3E0"
                                        Foreground="#EF6C00" />
                                    <TextBlock Text="⭐⭐⭐"
                                        FontSize="11"
                                        Foreground="#FF9800" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!--  成就2  -->
                        <Border
                            Padding="16"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="🎤 技术分享会"
                                    FontSize="16"
                                    FontWeight="SemiBold" />
                                <TextBlock Text="在公司内部成功举办WPF开发最佳实践分享会"
                                    Margin="0,4,0,0"
                                    FontSize="12"
                                    Foreground="#666" />
                                <StackPanel
                                    Margin="0,8,0,0"
                                    Orientation="Horizontal">
                                    <TextBlock Text="2023-12-10"
                                        FontSize="11"
                                        Foreground="#999" />
                                    <TextBlock Text="职业发展"
                                        Padding="4,2"
                                        FontSize="11"
                                        Background="#E3F2FD"
                                        Foreground="#1976D2" />
                                    <TextBlock Text="⭐⭐⭐⭐"
                                        FontSize="11"
                                        Foreground="#FF9800" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
