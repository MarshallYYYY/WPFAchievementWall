<UserControl
    x:Class="Client.Views.GoalsManagementViews.AchievedGoalDataTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Views.GoalsManagementViews"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    xmlns:views="clr-namespace:Client.Views"
    xmlns:models="clr-namespace:Models;assembly=Models"
    d:DataContext="{d:DesignInstance Type=models:Goal}">

    <Border
        Background="#B3F57B7B"
        CornerRadius="10"
        Margin="5">

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition
                    Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Column="0"
                Margin="5">

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    FontSize="27"
                    VerticalAlignment="Center"
                    Text="{Binding Path=Title}" />

                <Grid
                    Grid.Row="1"
                    Margin="0,5">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Column="0"
                        Orientation="Horizontal">
                        <TextBlock
                            FontSize="14"
                            Foreground="Gray"
                            VerticalAlignment="Center"
                            Text="实际完成日期：" />
                        <TextBlock
                            FontSize="14"
                            Foreground="Gray"
                            VerticalAlignment="Center"
                            Text="{Binding Path=AchieveDate, StringFormat='yyyy年MM月dd日'}" />
                    </StackPanel>

                    <StackPanel
                        Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                        <TextBlock
                            FontSize="14"
                            Foreground="Gray"
                            VerticalAlignment="Center"
                            Text="预期完成日期：" />
                        <TextBlock
                            FontSize="14"
                            Foreground="Gray"
                            VerticalAlignment="Center"
                            Text="{Binding Path=TargetDate, StringFormat='yyyy年MM月dd日'}" />
                    </StackPanel>

                </Grid>

                <TextBlock
                    Grid.Row="2"
                    FontSize="22"
                    Text="{Binding Path=Content}" />

            </Grid>

            <Button
                Grid.Column="1"
                Command="{Binding DataContext.DeleteCommand,
                            RelativeSource={RelativeSource AncestorType=views:GoalsManagementView}}"
                CommandParameter="{Binding}"
                Margin="0,0,10,0"
                Width="50"
                Height="50"
                HorizontalAlignment="Right"
                Background="Red"
                Opacity="0.5"
                Content="🗑️">
            </Button>

        </Grid>

    </Border>

</UserControl>