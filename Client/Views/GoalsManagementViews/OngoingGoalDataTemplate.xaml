<UserControl
    x:Class="Client.Views.GoalsManagementViews.OngoingGoalDataTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Client.Views.GoalsManagementViews"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    xmlns:views="clr-namespace:Client.Views"
    xmlns:models="clr-namespace:Models;assembly=Models"
    d:DataContext="{d:DesignInstance Type=models:Goal}">

    <Border
        Background="#9987FBD4"
        CornerRadius="10"
        Margin="5">

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition
                    Width="auto" />
            </Grid.ColumnDefinitions>

            <!--第一列：标题、时间、内容-->
            <Grid
                Grid.Column="0"
                Margin="5">

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    FontSize="27"
                    VerticalAlignment="Center"
                    Text="{Binding Path=Title}" />

                <StackPanel
                    Grid.Row="1"
                    Margin="0,5"
                    Orientation="Horizontal">
                    <TextBlock
                        FontSize="14"
                        Foreground="Gray"
                        VerticalAlignment="Center"
                        Text="预期完成日期：" />
                    <TextBlock
                        FontSize="14"
                        Foreground="Gray"
                        VerticalAlignment="Center"
                        Text="{Binding Path=TargetDate, StringFormat='yyyy年MM月dd日'}" />
                </StackPanel>

                <TextBlock
                    Grid.Row="2"
                    FontSize="22"
                    Text="{Binding Path=Content}" />

            </Grid>

            <!--第二列：三个按钮（分成两列：2,1）-->
            <Grid
                Grid.Column="1"
                Margin="0,0,10,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel
                    VerticalAlignment="Center">
                    <Button
                        Margin="2"
                        Background="Blue"
                        Opacity="0.5"
                        Content="📝">
                    </Button>
                    <Button
                        Command="{Binding DataContext.DeleteCommand,
                            RelativeSource={RelativeSource AncestorType=views:GoalsManagementView}}"
                        CommandParameter="{Binding}"
                        Margin="2"
                        Background="Red"
                        Opacity="0.7"
                        Content="🗑️">
                    </Button>
                </StackPanel>

                <Button
                    Width="66"
                    Height="66"
                    FontSize="20"
                    Background="#FFF57B7B"
                    Grid.Column="1"
                    Content="🚀">
                </Button>
            </Grid>

        </Grid>

    </Border>

</UserControl>
